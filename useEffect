const onSelectionChange = (e) => {
  // âœ… allow selection only if click happened on checkbox input
  const isCheckboxClick =
    e?.nativeEvent?.target?.type === "checkbox" ||
    e?.nativeEvent?.target?.classList?.contains("k-checkbox");

  if (!isCheckboxClick) return;

  const { dataItem } = e;

  const checked =
    e?.nativeEvent?.target?.checked ?? !Boolean(dataItem?.[SELECTED_FIELD]);

  setResultState((prev) =>
    prev.map((item) =>
      item?.[DATA_ITEM_KEY] === dataItem?.[DATA_ITEM_KEY]
        ? { ...item, [SELECTED_FIELD]: checked }
        : item
    )
  );
};
