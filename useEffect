const rowRender = (tr, props) => {
  return React.cloneElement(tr, {
    ...tr.props,
    onClick: (e) => {
      // ✅ allow ONLY checkbox click
      const isCheckboxClick =
        e.target?.type === "checkbox" ||
        e.target?.classList?.contains("k-checkbox");

      if (!isCheckboxClick) {
        e.preventDefault();
        e.stopPropagation();   // ✅ important
        return;
      }
    }
  });
};
