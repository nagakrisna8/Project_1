const onSelectionChange = (e) => {
  // ✅ if selection came from row click, stop it
  const native = e?.nativeEvent;
  const target = native?.target;

  const isCheckboxClick =
    target?.closest?.(".k-checkbox") || // checkbox element
    target?.type === "checkbox" ||       // native checkbox
    target?.classList?.contains("k-checkbox");

  if (!isCheckboxClick) {
    return; // ✅ ignore row click selection
  }

  const checked = target.checked;
  const { dataItem } = e;

  setResultState((prev) =>
    prev.map((item) =>
      item?.[DATA_ITEM_KEY] === dataItem?.[DATA_ITEM_KEY]
        ? { ...item, [SELECTED_FIELD]: checked }
        : item
    )
  );
};
