const rowRender = (trElement, props) => {
    return React.cloneElement(trElement, {
        ...trElement.props,
        key: props.dataItem.AcronymId   // ðŸ”´ VERY IMPORTANT
    });
};

const onAcronymChange = (e: GridItemChangeEvent) => {
    const field = e.field as string;
    const value = e.value;
    const id = e.dataItem.AcronymId;

    setAcronymData(prev => {
        const index = prev.findIndex(i => i.AcronymId === id);
        if (index === -1) return prev;

        const updated = [...prev];
        updated[index] = {
            ...updated[index],
            [field]: value,
            RecStatus: id < 0 ? OperationType.ADD : OperationType.UPDATE
        };

        return updated;
    });

    setIsTabDirty(true);
};
const customAcronymInputText = (props) => {
    const { dataItem, field, onChange } = props;
    const inputRef = React.useRef(null);

    React.useEffect(() => {
        inputRef.current?.focus();
    }, []);

    return (
        <td>
            <TextBox
                ref={inputRef}
                value={dataItem[field] || ""}
                onChange={(e) =>
                    onChange({
                        dataItem,
                        field,
                        syntheticEvent: e,
                        value: e.target.value
                    })
                }
            />
        </td>
    );
};
