<GridColumn
  field={SELECTED_FIELD}
  title="Select/Deselect all rows"
  filterable={false}
  width="45px"
  headerSelectionValue={SelectionValue}
  cell={(props) => (
    <td>
      <input
        type="checkbox"
        checked={props.dataItem[SELECTED_FIELD] || false}
        onChange={(e) => {
          props.onChange?.({
            dataItem: props.dataItem,
            field: SELECTED_FIELD,
            syntheticEvent: e,
            value: e.target.checked,
          });
        }}
        onClick={(e) => e.stopPropagation()} // âœ… IMPORTANT
      />
    </td>
  )}
/>
