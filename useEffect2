useEffect(() => {
  if (!ShowPrompt) return;

  setTimeout(() => {
    const promptEl = document.querySelector(".k-inline-ai-prompt") as HTMLElement | null;
    const popupEl = document.querySelector(".k-popup.k-inline-ai") as HTMLElement | null;

    if (promptEl && popupEl) {
      const rect = promptEl.getBoundingClientRect();

      // Safe â†’ popupEl is HTMLElement, so .style works
      popupEl.style.position = "fixed";
      popupEl.style.transform = "none";
      popupEl.style.top = `${rect.bottom + 8}px`;
      popupEl.style.left = `${rect.left}px`;
    }
  }, 10);
}, [ShowPrompt, Outputs, Streaming, AnchorEl]);


<style>
{`
  /* Force the AI command popup to position OUTSIDE the editor container */
  .k-popup.k-inline-ai {
      position: fixed !important;
      transform: none !important;
      z-index: 999999 !important;
  }
`}
</style>
