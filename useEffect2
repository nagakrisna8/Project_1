const customAcronymInputText = (props) => {
    const { dataItem, field, onChange } = props;

    return (
        <td>
            <TextBox
                value={dataItem[field] || ""}
                onChange={(e) =>
                    onChange({
                        dataItem,
                        field,
                        syntheticEvent: e,
                        value: e.target.value
                    })
                }
            />
        </td>
    );
};

const customFullPhaseInputText = (props) => {
    const { dataItem, field, onChange } = props;

    return (
        <td>
            <TextBox
                value={dataItem[field] || ""}
                onChange={(e) =>
                    onChange({
                        dataItem,
                        field,
                        syntheticEvent: e,
                        value: e.target.value
                    })
                }
            />
        </td>
    );
};

const customDisabledInputText = (props) => {
    const { dataItem, field } = props;

    return (
        <td>
            <TextBox readOnly value={dataItem[field] || ""} />
        </td>
    );
};
const onAcronymChange = (e: GridItemChangeEvent) => {
    const newData = acronymData.map(item => {
        if (item.AcronymId === e.dataItem.AcronymId) {
            return {
                ...item,
                [e.field || ""]: e.value,
                RecStatus: item.AcronymId < 0 ? OperationType.ADD : OperationType.UPDATE
            };
        }
        return item;
    });

    setAcronymData(newData);
    setDataState(newData);
    setIsTabDirty(true);
};

const addNewAcronym = () => {
    const newRow = {
        AcronymId: getTempId(),
        RPTId: parseInt(reportId || "0"),
        Acronym: "",
        FullPhrase: "",
        inEdit: true,
        isSelected: false,
        RecStatus: OperationType.ADD
    };

    setAcronymData(prev => [newRow, ...prev]);
    setDataState(prev => [newRow, ...prev]);
    setIsTabDirty(true);
};
