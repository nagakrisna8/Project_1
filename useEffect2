useEffect(() => {
  const cmdPopup = document.querySelector(".k-popup.k-inline-ai");
  const promptBox = document.querySelector(".k-inline-ai-prompt");

  if (!cmdPopup || !promptBox) return;

  const rect = promptBox.getBoundingClientRect();

  cmdPopup.style.setProperty("--ai-cmd-top", `${rect.bottom + 6}px`);
  cmdPopup.style.setProperty("--ai-cmd-left", `${rect.left}px`);
}, [ShowPrompt, Outputs, AnchorEl, Streaming]);
