const commandItems = commands.map(cmd => ({
  text: cmd.text,
  id: cmd.id,
  prompt: cmd.prompt
}));

 const GenerateDropdownButton = () => {
  return (
    <DropDownButton
      text="Comands"
      themeColor="primary"
      disabled={streaming}
      items={commandItems}
      onItemClick={(e) => {
        const cmd = commands.find(c => c.id === e.item.id);

        if (!cmd || !cmd.prompt || !selectedText) {
          return;
        }

        onPromptRequest(cmd.prompt(selectedText));
      }}
    />
  );
};
