useEffect(() => {
  if (!ShowPrompt) return;

  const stopEnterSteal = (e: KeyboardEvent) => {
    if (e.key === 'Enter') {
      const target = e.target as HTMLElement;
      if (target?.closest('.k-inline-ai, .k-inline-ai-prompt')) {
        e.stopPropagation();
      }
    }
  };

  document.addEventListener('keydown', stopEnterSteal, true);
  return () => document.removeEventListener('keydown', stopEnterSteal, true);
}, [ShowPrompt]);
